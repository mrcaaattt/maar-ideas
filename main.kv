		Button:
			text: "Notes"
			size_hint_x:0.9
			on_release: root.drop_down.open(self)
			
	Label:
		text: 'To do a to-do'
	
	BoxLayout:
		height:'40dp'
		size_hint_y:None
		Button:
		Label:

